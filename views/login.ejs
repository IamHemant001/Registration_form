    <main class="regBox">
        <h1>Login</h1>
        <form action="/login" method="POST">

            <label for="email" class="form-label">Email</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="email" type="email"  name="email" placeholder="Enter Your Email"  aria-describedby="basic-addon1" required>
            </div>
            
            <label for="password" class="form-label">Password</label>
            <div class="input-group mb-3">
                <input  class="form-control" type="password" id="password" name="password" placeholder="Enter Your Password"  aria-describedby="basic-addon1" required>
            </div>
            <a href="forgetPassword" id="forgetPass">Forget Password?</a><br>
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" id="rememberMe" for="rememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn input-group btn-primary">Login</button>

        </form>

        <script src="app.js"></script>

        <div class="login">
            <p>Don't have an account ?<a href="/register">Sign Up</a> </p>
        </div>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    </body>
